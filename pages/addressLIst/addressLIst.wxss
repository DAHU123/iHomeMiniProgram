/**index.wxss**/
.containerCar{
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
}
.me_person{
    display: flex;
    flex-flow:row nowrap; 
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
    background: #fff;
    width: 710rpx;
    height: 80rpx;
    padding: 0 20rpx;
    position: fixed;
    top: 0;
}
.me_person text{
    font-size: 30rpx;
    color: #9a9a9a;
}
.me_goBack{
    width: 15rpx;
    height: 28rpx;
    transform:rotateY(180deg);
}
.me_threeInfo{
    width: 34rpx;
    height: 28rpx;
}
.topHandle{
  width: 710rpx;
  padding: 20rpx 20rpx 0rpx 20rpx;
  border-bottom: 1px solid #f2f2f2;
  margin-bottom: 20rpx;
  /* margin-top: 80rpx; */
  background-color: #fff;
}
.Name{
  width: 100%;
  height: 36rpx;
  font-size: 26rpx;
  /* background-color: #666; */
}
.Name view{
  width: 50%;
  display: inline-block;
  color: #323232;
}
.Name view:nth-child(1){
  text-align: left;
}
.Name view:nth-child(2){
  text-align: right;
}
.Address{
  font-size: 22rpx;
  color: #808080;
  max-height: 64rpx;
  overflow: hidden;
  margin-top: 20rpx;
  line-height: 32rpx;
}
.select{
  height: 70rpx;
  border-top: 1px solid #ebebeb;
  margin-top: 20rpx;
}
.select view{
  width: 50%;
  float: left;
  display: inline-block;
  color: #999999;

}
.Setting image{
  width: 25rpx;
  height: 25rpx;
  float: left;
  margin-top: 22.5rpx;
}
.Setting text{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 22rpx;
  float: left;
  display: inline-block;
  margin-left: 20rpx;
}
.operation{
  height: 70rpx;
}
.operation image{
  width: 22rpx;
  height: 22rpx;
  float: left;
  margin-top: 24rpx;
}
.operation text{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 22rpx;
  float: left;
  display: inline-block;
  margin-left: 5rpx;
}
.buttom{
  height: 88rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 88rpx;
  background-color: #ff6128;

}