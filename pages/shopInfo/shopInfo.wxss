.me_block{
    display: flex;
    flex-flow:row nowrap;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
    background: #fff;
}
.companyLogo{
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.companyName{
    font-size: 26rpx;
    color: #323232;
}
.companyIntro{
    padding: 20rpx;
    background: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
    border-bottom: 1rpx solid #f2f2f2;
    margin-bottom: 20rpx;
}
.companyAddress{
    background: #fff;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #323232;
    border-bottom: 1rpx solid #f2f2f2;
    padding: 20rpx;
    display: flex;
    flex-flow:row nowrap;
    justify-content: flex-start;
    align-items: center;
}
.companyAddress text:nth-child(1){
    width: 120rpx;
    align-self: flex-start;

}