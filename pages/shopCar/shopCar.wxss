/**index.wxss**/
.containerCar{
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
}
.me_person{
    display: flex;
    flex-flow:row nowrap; 
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
    background: #fff;
    width: 710rpx;
    height: 80rpx;
    padding: 0 20rpx;
    position: fixed;
    top: 0;
}
.me_person text{
    font-size: 30rpx;
    color: #9a9a9a;
}
.me_goBack{
    width: 15rpx;
    height: 28rpx;
    transform:rotateY(180deg);
}
.me_threeInfo{
    width: 34rpx;
    height: 28rpx;
}
.topHandle{
  height: 60rpx;
  width: 710rpx;
  background-color: #f8f8f8;
}
.shopLiCar{
  height: 180rpx;
  width: 710rpx;
  padding: 0 20rpx;
  background-color: white;
  position: relative;
  border-bottom: 1px solid #e5e5e5;
}
.setShop{
  width: 710rpx;
  padding: 0 20rpx;
  height: 60rpx;
  background-color: #f8f8f8;
  margin-top: 80rpx;
}
.setShop text{
   display:block; 
   height: 60rpx;
   line-height: 60rpx;
   text-align: right;
   font-size: 22rpx;
   color: #ff6129;
}
.shopImg{
  width: 140rpx;
  height: 140rpx;
  float:left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background-color: #f8f8f8;
}
.shopImg image{
  width: 140rpx;
  height: 140rpx;
}
.ChoiceCheck{
  width: 30rpx;
  height: 140rpx;
  float: left;
  margin-top: 20rpx;
}
.ChoiceCheck image{
  width: 30rpx;
  height: 30rpx;
  line-height: 140rpx;
  float: left;
  margin-top: 55rpx;
}
.ShopName{
  width: 500rpx;
  height: 60rpx;
  overflow: hidden;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}
.Shopspec{
  width: 500rpx;
  height: 30rpx;
  overflow: hidden;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
}
.amount{
  width: 172rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.amount input{
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  text-align: center;
  font-size: 20rpx;
  background-color: #f8f8f8;
  margin-left: 1px;
  margin-right: 1px;
}
.amount text{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  display: block;
  background-color: #f8f8f8;
  padding:0;
  float: left;
  border: 1rpx solid #f8f8f8;
  border-radius: 0;
  color: #666;
}
.bottom{
  width: 100%;
  height: 88rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: white;
}
.allCheck{
  
  height: 88rpx;
}
.allCheck image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.bottom view{
  display: inline-block;
}
.price{
  height: 88rpx;
  width: 300rpx;
  text-align: right;
  line-height: 88rpx;
  margin-left: 100rpx;
}
.bottomRight{
  width: 268rpx;
  background-color: #ff6128;
  text-align: center;
  float: right;
  line-height: 88rpx;
  font-size: 28rpx;
  color: white;
}
