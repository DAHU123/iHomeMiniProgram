.me_fixedPos{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
}
.me_bgTop{
    height: 64rpx;
    background: #ccc;
    padding: 20rpx 20rpx 10rpx;
    display: flex;
    flex-flow:row nowrap;
    justify-content: space-between;
    align-items: center;
}
.oneCom{
    display: flex;
    flex-flow:row nowrap;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
    margin: 0 20rpx 0 0;
    background: #fff;
    padding: 0 15rpx;
    border-radius: 10rpx;

}
.me_bgTop view input{
    /*width: 280rpx;*/
    height: 28rpx;
    padding: 0 10rpx;
    font-size: 24rpx;
    line-height: 20px;
    background-color: rgba(255, 255, 255, 1);
    flex-grow: 1;
}
.searchBtn{
    width: 100rpx;
    height: 48rpx;
    border-radius: 10rpx;
    color: rgba(16, 16, 16, 1);
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
    font-family: Microsoft Yahei;
    border: 1rpx solid rgba(187, 187, 187, 1);
    background: #fff;
    padding: 0 15rpx;
}
.me_condition{
    display: flex;
    flex-flow:row nowrap;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    border-bottom: 1rpx solid #e2e2e2;
    background :#fff;
}
.me_sort{
    width: 30rpx;
    height: 22rpx;
}
.me_goodsList{
    margin-top: 190rpx;
    display: flex;
    flex-flow:row wrap;
    justify-content: flex-start;
    align-items: center;

}
.me_rect{
    width: 370rpx;
    /*height: 200rpx;*/
    margin-right: 5rpx;
    margin-bottom: 5rpx;
    background: #fff;
    box-sizing: content-box;
}
.me_goodsImg{
    width: 100%;
    height: 350rpx;
}
.me_goodsTitle{
    font-size: 24rpx;
    color: #323232;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.me_pad{
    padding: 15rpx ;
}
.me_price{
    padding: 0 15rpx;
    font-size: 36rpx;
    color: #ff6129;
}